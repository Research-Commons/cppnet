{
  "name": "cppnet",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/app",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": ["ms-vscode.cpptools", "ms-vscode.cmake-tools"]
    }
  },

  "mounts": ["source=${localWorkspaceFolder},target=/app,type=bind"],

  "postCreateCommand": "cmake . && make"
}
